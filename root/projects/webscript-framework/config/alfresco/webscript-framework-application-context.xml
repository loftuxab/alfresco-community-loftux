<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans-2.0.dtd'>

<beans>

   <!--                 -->
   <!--  Configuration  -->
   <!--                 -->
   
   <bean id="web.configsource" class="org.alfresco.config.source.UrlConfigSource">
      <constructor-arg>
         <list>
            <value>classpath:alfresco/webscript-framework-config.xml</value>
            <value>classpath:alfresco/web-extension/webscript-framework-config-custom.xml</value>
            <value>jar:*!/META-INF/webscript-framework-config-custom.xml</value>
         </list>
      </constructor-arg>
   </bean>
   
   <bean id="web.config" class="org.alfresco.config.xml.XMLConfigService">
       <constructor-arg>
         <ref bean="web.configsource" />
      </constructor-arg>
   </bean>


   <!--                   -->
   <!--  ATOM Support     -->
   <!--                   -->

   <bean id="webscripts.abdera" class="org.alfresco.web.scripts.atom.AbderaServiceImpl">
      <property name="writers">
         <list>
            <value>prettyxml</value>
            <value>json</value>
         </list>
      </property>
   </bean>
   
   <bean id="webscripts.cmis.atom.extension" class="org.alfresco.web.scripts.atom.AbderaExtension">
      <property name="abderaService" ref="webscripts.abdera"/>
      <property name="QNames">
         <props>
            <prop key="cmisra_object">{http://docs.oasis-open.org/ns/cmis/restatom/200901}object</prop>
            <prop key="cmisra_repositoryInfo">{http://docs.oasis-open.org/ns/cmis/restatom/200901}repositoryInfo</prop>
         </props>
      </property>
      <property name="extensionFactories">
         <list>
           <bean class="org.alfresco.abdera.ext.cmis.CMISExtensionFactory"/>
         </list>
      </property>
   </bean>
   

   <!--                      -->
   <!--  Formats / Mimetypes -->
   <!--                      -->

   <!--  Format Registry -->
   <bean id="webscripts.formatregistry" class="org.alfresco.web.scripts.FormatRegistry">
      <property name="defaultReader"><bean class="org.alfresco.web.scripts.RequestReader"/></property>
   </bean>

   <!--  Format Map -->
   <bean id="webscripts.formatmap" class="org.alfresco.web.scripts.FormatMap" abstract="true">
      <property name="registry" ref="webscripts.formatregistry" />
   </bean>

   <!--  Reader/Writer Map -->
   <bean id="webscripts.adaptorset" class="org.alfresco.web.scripts.FormatAdaptorSet" abstract="true">
      <property name="registry" ref="webscripts.formatregistry" />
   </bean>

   <!--  Default Readers / Writers -->
   
   <bean id="webscripts.adaptors" parent="webscripts.adaptorset">
      <property name="readers">
         <list>
           <bean class="org.alfresco.web.scripts.servlet.FormDataReader" />
           <bean class="org.alfresco.web.scripts.json.JSONReader" />
           <bean class="org.alfresco.web.scripts.form.UrlEncodedFormReader" />
           <bean class="org.alfresco.web.scripts.atom.AtomReader">
              <property name="abderaService" ref="webscripts.abdera"/>
           </bean>
           <bean class="org.alfresco.web.scripts.atom.AtomEntryReader">
              <property name="abderaService" ref="webscripts.abdera"/>
           </bean>
           <bean class="org.alfresco.web.scripts.atom.AtomFeedReader">
              <property name="abderaService" ref="webscripts.abdera"/>
           </bean>
         </list>
      </property>
      <property name="writers">
         <list>
           <bean class="org.alfresco.web.scripts.atom.AtomWriter">
              <property name="abderaService" ref="webscripts.abdera"/>
              <property name="class"><value>org.apache.abdera.model.Entry</value></property>
              <property name="mimetype"><value>application/atom+xml;type=entry</value></property>
           </bean>
           <bean class="org.alfresco.web.scripts.atom.AtomWriter">
              <property name="abderaService" ref="webscripts.abdera"/>
              <property name="class"><value>org.apache.abdera.model.Feed</value></property>
              <property name="mimetype"><value>application/atom+xml;type=feed</value></property>
           </bean>
           <bean class="org.alfresco.web.scripts.atom.AtomWriter">
              <property name="abderaService" ref="webscripts.abdera"/>
              <property name="class"><value>org.apache.abdera.model.Entry</value></property>
              <property name="mimetype"><value>application/json</value></property>
              <property name="writer"><value>json</value></property>
           </bean>
           <bean class="org.alfresco.web.scripts.atom.AtomWriter">
              <property name="abderaService" ref="webscripts.abdera"/>
              <property name="class"><value>org.apache.abdera.model.Feed</value></property>
              <property name="mimetype"><value>application/json</value></property>
              <property name="writer"><value>json</value></property>
           </bean>
         </list>
      </property>
   </bean>

   <!--  Default Formats -->
   <bean id="webscripts.formats" parent="webscripts.formatmap">
      <property name="formats">
         <props>
            <prop key="html">text/html</prop>
            <prop key="text">text/plain</prop>
            <prop key="xml">text/xml</prop>
            <prop key="atom">application/atom+xml</prop>
            <prop key="atomentry">application/atom+xml;type=entry</prop>
            <prop key="atomfeed">application/atom+xml;type=feed</prop>
            <prop key="atomsvc">application/atomsvc+xml</prop>
            <prop key="rss">application/rss+xml</prop>
            <prop key="json">application/json</prop>
            <prop key="opensearchdescription">application/opensearchdescription+xml</prop>
            <prop key="mediawiki">text/plain</prop>
            <prop key="portlet">text/html</prop>
            <prop key="fbml">text/html</prop>
            <prop key="php">text/html</prop>
            <prop key="js">text/javascript</prop>
            <prop key="calendar">text/calendar</prop>
         </props>
      </property>
      <property name="mimetypes">
         <props>
            <prop key="text/html">html</prop>
            <prop key="text/plain">text</prop>
            <prop key="text/xml">xml</prop>
            <prop key="text/calendar">calendar</prop>
            <prop key="application/atom+xml">atom</prop>
            <prop key="application/atom+xml;type=entry">atomentry</prop>
            <prop key="application/atom+xml;type=feed">atomfeed</prop>
            <prop key="application/atomsvc+xml">atomsvc</prop>
            <prop key="application/rss+xml">rss</prop>
            <prop key="application/json">json</prop>
            <prop key="application/x-www-form-urlencoded">xwwwformurlencoded</prop>
            <prop key="application/opensearchdescription+xml">opensearchdescription</prop>
         </props>
      </property>
   </bean>

   <!--  IE Specific set of API Formats -->
   <bean id="webscripts.formats.IE" parent="webscripts.formatmap">
      <property name="agent"><value>MSIE</value></property>
      <property name="formats">
         <props>
            <prop key="atom">text/xml</prop>
            <prop key="atomentry">text/xml</prop>
            <prop key="atomfeed">text/xml</prop>
            <prop key="rss">text/xml</prop>
            <prop key="opensearchdescription">text/xml</prop>
         </props>
      </property>
   </bean>


   <!--                      -->
   <!--  Web Script Messages -->
   <!--                      -->

   <bean id="webscripts.resources" class="org.alfresco.i18n.ResourceBundleBootstrapComponent">
      <property name="resourceBundles">
         <list>
            <value>alfresco.messages.webscripts</value>
         </list>
      </property>
   </bean>


   <!--                     -->
   <!--  Web Script Storage -->
   <!--                     -->

   <bean id="webscripts.classpathstore" class="org.alfresco.web.scripts.ClassPathStore" abstract="true" />

   <bean id="webscripts.remotestore" class="org.alfresco.web.scripts.RemoteStore" abstract="true" />

   <bean id="webscripts.store" parent="webscripts.classpathstore">
      <property name="mustExist"><value>true</value></property>
      <property name="classPath"><value>alfresco/webscripts</value></property>
   </bean>

   <bean id="webscripts.searchpath" class="org.alfresco.web.scripts.SearchPath">
      <property name="searchPath">
         <list>
            <ref bean="webscripts.store" />
         </list>
      </property>
   </bean>


   <!--                     -->
   <!--  Abstract Container -->
   <!--                     -->

   <bean abstract="true" id="webscripts.abstractcontainer">
      <property name="formatRegistry" ref="webscripts.formatregistry" />
      <property name="searchPath" ref="webscripts.searchpath" />
      <property name="configService" ref="web.config" />
      <property name="scriptObjects">
         <map>
           <entry key="logger">
              <bean class="org.alfresco.web.scripts.ScriptLogger"/>
           </entry>
           <entry key="atom">
              <bean class="org.alfresco.web.scripts.atom.AtomService">
                 <property name="abderaService" ref="webscripts.abdera"/>
              </bean>
           </entry>
           <entry key="jsonUtils">
              <bean class="org.alfresco.web.scripts.json.JSONUtils"/>
           </entry>
           <entry key="stringUtils">
              <bean class="org.alfresco.web.scripts.ScriptableUtils"/>
           </entry>
         </map>
      </property>
      <property name="templateObjects">
         <map>
           <entry key="argreplace">
              <bean class="org.alfresco.web.scripts.ArgReplaceMethod"/>
           </entry>
           <entry key="encodeuri">
              <bean class="org.alfresco.web.scripts.UrlEncodeMethod"/>
           </entry>
           <entry key="dateCompare">
              <bean class="org.alfresco.web.scripts.DateCompareMethod"/>
           </entry>
           <entry key="xmldate">
              <bean class="org.alfresco.web.scripts.ISO8601DateFormatMethod"/>
           </entry>
           <entry key="jsonUtils">
              <bean class="org.alfresco.web.scripts.json.JSONUtils"/>
           </entry>
           <entry key="stringUtils">
              <bean class="org.alfresco.web.scripts.ScriptableUtils"/>
           </entry>
           <entry key="atom">
              <bean class="org.alfresco.web.scripts.atom.AtomService">
                 <property name="abderaService" ref="webscripts.abdera"/>
              </bean>
           </entry>
         </map>
      </property>
   </bean>


   <!--                                               -->
   <!--  Web Script Presentation (Web Tier) Container -->
   <!--                                               -->

   <bean id="webscripts.web.templateprocessor" class="org.alfresco.web.scripts.PresentationTemplateProcessor">
      <property name="searchPath" ref="webscripts.searchpath" />
      <property name="defaultEncoding"><value>UTF-8</value></property>
   </bean>

   <bean id="webscripts.web.scriptprocessor" class="org.alfresco.web.scripts.PresentationScriptProcessor">
      <property name="searchPath" ref="webscripts.searchpath" />
   </bean>

   <bean id="webscripts.container" parent="webscripts.abstractcontainer" class="org.alfresco.web.scripts.PresentationContainer">
      <property name="name"><value>Presentation</value></property>
      <property name="registry" ref="webscripts.registry" />
      <property name="templateProcessor" ref="webscripts.web.templateprocessor" />
      <property name="scriptProcessor" ref="webscripts.web.scriptprocessor" />
      <property name="scriptObjects">
         <map merge="true">
            <entry key="remote" value-ref="webscripts.script.remote" />
         </map>
      </property>
   </bean>
      
   <!--                             -->
   <!-- Web Scripts Remote Instance -->
   <!--                             -->
   <bean id="webscripts.script.remote" class="org.alfresco.web.scripts.ScriptRemote">
      <property name="configService" ref="web.config"/>
      <property name="connectorProvider" ref="webscripts.connector.provider"/>
   </bean>
   
   <!--                                -->
   <!-- Web Scripts Connector Provider -->
   <!--                                -->
   <bean id="webscripts.connector.provider" class="org.alfresco.connector.ConnectorProviderImpl">
      <property name="connectorService" ref="connector.service" />
   </bean>
   

   <!--                      -->
   <!--  Web Script Registry -->
   <!--                      -->

   <!--
     // Note: This URI index was used until v3.0. It may be switched back on, if the newer
     //       Jax-RS index is not compatible with your URIs 
     <bean id="webscripts.index" class="org.alfresco.web.scripts.PrefixTemplateUriIndex" /> 
   -->
   <bean id="webscripts.index" class="org.alfresco.web.scripts.JaxRSUriIndex" />
   
   <bean id="webscripts.registry" class="org.alfresco.web.scripts.DeclarativeRegistry">
      <property name="container" ref="webscripts.container" />
      <property name="uriIndex" ref="webscripts.index" />
      <property name="searchPath" ref="webscripts.searchpath" />
      <property name="defaultWebScript"><value>webscript.default</value></property>
   </bean>
 

   <!--                   -->
   <!--  Facebook Runtime -->
   <!--                   -->

   <bean id="facebook.service" class="org.alfresco.web.scripts.facebook.FacebookService">
      <property name="container" ref="webscripts.container" />
   </bean>
   
   
   <!--                   -->
   <!-- Connector Service -->
   <!--                   -->
   <bean id="connector.service" class="org.alfresco.connector.ConnectorService">
      <property name="configService" ref="web.config" />
   </bean>
   
   <!--                            -->
   <!-- Credential Vault Providers -->
   <!--                            -->
   <bean id="credential.vault.provider" class="org.alfresco.connector.SimpleCredentialVaultProvider" />

   <bean id="credential.vault.provider.xml" class="org.alfresco.connector.XMLCredentialVaultProvider">
      <property name="configService" ref="web.config" />
      <property name="location" value="/alfresco/xml" />
   </bean>
   
   
   <!--                             -->
   <!--  Web Script Implementations -->
   <!--                             -->

   <!--  Abstract Web Script Implementations -->
   <bean id="webscript" abstract="true"/>
   <bean id="webscriptdesc" abstract="true"/>

   <!--  Declarative Web Script Implementation -->
   <bean id="webscript.default" parent="webscript" class="org.alfresco.web.scripts.DeclarativeWebScript" scope="prototype"/>


   <!--            -->
   <!--  API Beans -->
   <!--            -->

   <!--  Index -->
   <bean id="webscript.org.alfresco.index.get" class="org.alfresco.web.scripts.bean.Index" parent="webscript" scope="prototype"/>
   <bean id="webscript.org.alfresco.indexall.get" class="org.alfresco.web.scripts.bean.IndexAll" parent="webscript" scope="prototype"/>
   <alias name="webscript.org.alfresco.index.get" alias="webscript.org.alfresco.indexfailures.get"/>
   <bean id="webscript.org.alfresco.indexfamily.get" class="org.alfresco.web.scripts.bean.IndexFamily" parent="webscript" scope="prototype" />
   <bean id="webscript.org.alfresco.indexlifecycle.get" class="org.alfresco.web.scripts.bean.IndexLifecycle" parent="webscript" scope="prototype" />
   <bean id="webscript.org.alfresco.indexuri.get" class="org.alfresco.web.scripts.bean.IndexURI" parent="webscript" scope="prototype" />
   <bean id="webscript.org.alfresco.indexpackage.get" class="org.alfresco.web.scripts.bean.IndexPackage" parent="webscript" scope="prototype" />
   <bean id="webscript.org.alfresco.index.post" class="org.alfresco.web.scripts.bean.IndexUpdate" parent="webscript" scope="prototype" >
      <property name="facebookService" ref="facebook.service"/>
   </bean>

   <!--  Get Description Document -->
   <bean id="webscript.org.alfresco.scriptdescription.get" class="org.alfresco.web.scripts.bean.ServiceDescription" parent="webscript" scope="prototype" />

   <!--  Get Web Script -->
   <bean id="webscript.org.alfresco.scriptdump.get" class="org.alfresco.web.scripts.bean.ServiceDump" parent="webscript" scope="prototype" />

   <!--  Install -->
   <bean id="webscript.org.alfresco.scriptinstall.post" class="org.alfresco.web.scripts.bean.ServiceInstall" parent="webscript" scope="prototype" />
   
   <!--  Javascript APIs -->
   
   <!--  Switch on debugger by setting log4j.logger.org.alfresco.web.scripts.AlfrescoScriptDebugger to DEBUG -->
   <bean id="scriptDebugger" class="org.alfresco.web.scripts.AlfrescoScriptDebugger" init-method="start"/>
   
   <bean id="webscript.org.alfresco.jsdebugger.get" class="org.alfresco.web.scripts.bean.JavascriptDebugger" parent="webscript" scope="prototype">
      <property name="debugger" ref="scriptDebugger" />
   </bean>
   <bean id="webscript.org.alfresco.jsdebugger.post" class="org.alfresco.web.scripts.bean.JavascriptDebuggerPost" parent="webscript" scope="prototype">
      <property name="debugger" ref="scriptDebugger" />
   </bean>
   
</beans>