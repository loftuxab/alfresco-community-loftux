<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans>

   <!--              -->   
   <!--  Test Server -->
   <!--              -->
      
   <bean id="web.configsource" class="org.springframework.extensions.config.source.UrlConfigSource">
      <constructor-arg>
         <list>
            <value>classpath:alfresco/webscript-framework-config.xml</value>
            <value>classpath:alfresco/web-extension/webscript-framework-config-custom.xml</value>
            <value>jar:*!/META-INF/webscript-framework-config-custom.xml</value>
            <value>classpath:alfresco/webscript-framework-config-test.xml</value>
         </list>
      </constructor-arg>
   </bean>

   <bean id="webscripts.test" class="org.alfresco.web.scripts.TestWebScriptServer">
      <property name="container" ref="webscripts.container" />
      <property name="configService" ref="web.config" />
      <property name="messages">
         <bean class="org.springframework.context.support.ResourceBundleMessageSource">
            <property name="basenames">
               <list>
                  <value>alfresco/messages/webscripts</value>
               </list>
            </property>
         </bean>
      </property>
   </bean>
      
   <!--  Register a bogus format without a FormatReader for unit testing purposes -->
   <bean id="webscripts.formats.bogus" parent="webscripts.formatmap">
      <property name="formats">
         <props>
            <prop key="bogus">application/bogus</prop>
         </props>
      </property>
      <property name="mimetypes">
         <props>
            <prop key="application/bogus">bogus</prop>
         </props>
      </property>
   </bean>
   
</beans>